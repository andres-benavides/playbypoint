<!DOCTYPE html>
<html>
  <head>
    <title>Shorten URL</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >
  </head>
  <body class="container mt-5">

    <h1 class="mb-4">Shorten URL</h1>

    <%= form_with url: shortener_path, method: :post, scope: :url, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :original_url, "Paste URL", class: "form-label" %>
        <%= form.text_field :original_url, class: "form-control" %>
      </div>
      <%= form.submit "Shorten URL", class: "btn btn-primary" %>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-success mt-3"><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger mt-3"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:short_url] %>
      <p>New URL Shortened:</p> 
        <a href="<%= flash[:short_url] %>" target="_blank" rel="noopener">
          <%= flash[:short_url] %>
        </a>
      </p>
    <% end %>

    <div class="mt-4">
      <%= link_to "Historye URLs", shortener_list_path, class: "btn btn-secondary" %>
    </div>

  </body>
</html>
